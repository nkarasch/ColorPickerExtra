<UserControl
    x:Class="ColorPickerExtraDemo.Views.ColorSelectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ColorPickerExtraLib.Controls;assembly=ColorPickerExtraLib"
    xmlns:conv="clr-namespace:ColorPickerExtraDemo.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColorPickerExtraDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ColorPickerExtraLib.Models;assembly=ColorPickerExtraLib"
    xmlns:numupdown="clr-namespace:NumericUpDownLib;assembly=NumericUpDownLib"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Name="LocalColorSelectionView"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>

        <Style TargetType="{x:Type numupdown:UIntegerUpDown}">
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style TargetType="{x:Type numupdown:DoubleUpDown}">
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <ObjectDataProvider
            x:Key="ColorModeOptions"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:ColorMode" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="AdvancedPickerType"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:AdvancedPickerType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="EmptyElementModes"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:EmptyElementMode" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="ShowOnToggleButton"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:ShowOnToggleButton" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="ShapeGeometry"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:ShapeGeometry" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
        <conv:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <conv:EnumToInverseBooleanConverter x:Key="EnumToInverseBooleanConverter" />
        <conv:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <conv:BrushToColorConverter x:Key="BrushToColorConverter" />
        <conv:TextToThicknessConverter x:Key="TextToThicknessConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--#region StandardColorPicker Column 0-->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:StandardColorPicker
                Height="Auto"
                EmptyButtonText="{Binding EmptyButtonText, ElementName=_PortableColorPicker}"
                EnableEmptyMode="{Binding EnableEmptyMode, ElementName=_PortableColorPicker}"
                IsEmpty="{Binding IsEmpty, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedColor="{Binding SelectedColor, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardAvailableColorArray="{Binding StandardAvailableColorArray, ElementName=_PortableColorPicker}"
                StandardAvailableColorRows="{Binding StandardAvailableColorRows, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardAvailableColorsHeader="{Binding StandardAvailableColorsHeader, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardColumnCount="{Binding StandardColumnCount, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemBorderBrush="{Binding StandardItemBorderBrush, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemBorderThickness="{Binding StandardItemBorderThickness, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemCornerRadius="{Binding StandardItemCornerRadius, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemInnerHighlightBrush="{Binding StandardItemInnerHighlightBrush, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemMargin="{Binding StandardItemMargin, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemOuterHighlightBrush="{Binding StandardItemOuterHighlightBrush, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemSquareSize="{Binding StandardItemSquareSize, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardRecentColorRows="{Binding StandardRecentColorRows, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardRecentColorsHeader="{Binding StandardRecentColorsHeader, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardShowAvailableColors="{Binding StandardShowAvailableColors, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardShowRecentColors="{Binding StandardShowRecentColors, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                UseRectangularStyle="{Binding UseRectangularStyle, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                UsingAlphaChannel="{Binding UsingAlphaChannel, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <GroupBox Grid.Row="1">
                <GroupBox.Header>
                    <TextBlock FontWeight="ExtraBold" Text="StandardColorPicker Features" />
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="StandardShowAvailableColors:" />
                    <CheckBox
                        Grid.Row="0"
                        Grid.Column="1"
                        IsChecked="{Binding StandardShowAvailableColors, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="StandardAvailableColorsHeader:" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        IsEnabled="{Binding StandardShowAvailableColors, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        Text="{Binding StandardAvailableColorsHeader, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="StandardAvailableColorRows:" />
                    <numupdown:UIntegerUpDown
                        Grid.Row="2"
                        Grid.Column="1"
                        MaxValue="20"
                        MinValue="1"
                        Value="{Binding StandardAvailableColorRows, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="StandardShowRecentColors:" />
                    <CheckBox
                        Grid.Row="3"
                        Grid.Column="1"
                        IsChecked="{Binding StandardShowRecentColors, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Text="StandardRecentColorsHeader:" />

                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        IsEnabled="{Binding StandardShowRecentColors, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        Text="{Binding StandardRecentColorsHeader, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Text="StandardRecentColorRows:" />
                    <numupdown:UIntegerUpDown
                        Grid.Row="5"
                        Grid.Column="1"
                        MaxValue="20"
                        MinValue="1"
                        Value="{Binding StandardRecentColorRows, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Text="StandardColumnCount:" />
                    <numupdown:UIntegerUpDown
                        Grid.Row="6"
                        Grid.Column="1"
                        MaxValue="24"
                        MinValue="2"
                        Value="{Binding Path=StandardColumnCount, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Text="StandardItemSquareSize:" />
                    <numupdown:DecimalUpDown
                        Grid.Row="7"
                        Grid.Column="1"
                        Margin="0,5"
                        HorizontalAlignment="Right"
                        MaxValue="80"
                        MinValue="1"
                        Value="{Binding StandardItemSquareSize, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="0"
                        Text="StandardItemCornerRadius:" />
                    <numupdown:DecimalUpDown
                        Grid.Row="8"
                        Grid.Column="1"
                        Margin="0,5"
                        HorizontalAlignment="Right"
                        MaxValue="10"
                        MinValue="0"
                        Value="{Binding StandardItemCornerRadius, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="9"
                        Grid.Column="0"
                        Text="StandardItemMargin:" />
                    <numupdown:DecimalUpDown
                        Grid.Row="9"
                        Grid.Column="1"
                        Margin="0,5"
                        HorizontalAlignment="Right"
                        MaxValue="10"
                        MinValue="0"
                        Value="{Binding StandardItemMargin, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="0"
                        Text="StandardItemBorderThickness:" />
                    <numupdown:DecimalUpDown
                        Grid.Row="10"
                        Grid.Column="1"
                        Margin="0,5"
                        HorizontalAlignment="Right"
                        MaxValue="10"
                        MinValue="0"
                        Value="{Binding StandardItemBorderThickness, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="11"
                        Grid.Column="0"
                        Text="StandardItemBorderBrush:" />
                    <controls:PortableColorPicker
                        Grid.Row="11"
                        Grid.Column="1"
                        Width="100"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        BaseColorMode="Standard"
                        PortableBackgroundMode="Off"
                        PortableBorderMode="SelectedColor"
                        PortableBorderModeThickness="5"
                        SelectedColor="{Binding StandardItemBorderBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}" />

                    <TextBlock
                        Grid.Row="12"
                        Grid.Column="0"
                        Text="StandardItemInnerHighlightBrush:" />
                    <controls:PortableColorPicker
                        Grid.Row="12"
                        Grid.Column="1"
                        Width="100"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        BaseColorMode="Standard"
                        PortableBackgroundMode="Off"
                        PortableBorderMode="SelectedColor"
                        PortableBorderModeThickness="5"
                        PortableFontText="BorderBrush"
                        PortableInsideMargin="5"
                        SelectedColor="{Binding StandardItemInnerHighlightBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}" />
                    <TextBlock
                        Grid.Row="13"
                        Grid.Column="0"
                        Text="StandardItemOuterHighlightBrush:" />
                    <controls:PortableColorPicker
                        Grid.Row="13"
                        Grid.Column="1"
                        Width="100"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        BaseColorMode="Standard"
                        PortableBackgroundMode="Off"
                        PortableBorderMode="SelectedColor"
                        PortableBorderModeThickness="5"
                        SelectedColor="{Binding StandardItemOuterHighlightBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}" />

                    <Grid Grid.Row="14" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="StandardAvailableColorArray:" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,3"
                            Click="CustomColorAdd_Click"
                            Content="Add" />
                        <Button
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,3"
                            Click="CustomColorChange_Click"
                            Content="Change" />

                        <Button
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,3"
                            Click="CustomColorRemove_Click"
                            Content="Remove" />

                        <ListView
                            x:Name="customColorListView"
                            Grid.Row="1"
                            Grid.RowSpan="4"
                            Grid.Column="2"
                            Width="108"
                            ItemsSource="{Binding CustomColorList, ElementName=LocalColorSelectionView}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="BorderThickness" Value="2" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Rectangle
                                        Width="100"
                                        Height="20"
                                        Fill="{Binding BindsDirectlyToSource=True, Converter={StaticResource ColorToBrushConverter}}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>
        <!--#endregion StandardColorPicker Column 0-->

        <!--#region AdvancedColorPicker Column 1-->
        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:AdvancedColorPicker
                AdvancedInnerBorderBrush="{Binding AdvancedInnerBorderBrush, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                AdvancedInnerBorderWidth="{Binding AdvancedInnerBorderWidth, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                AdvancedPickerType="{Binding AdvancedPickerType, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                EmptyButtonText="{Binding EmptyButtonText, ElementName=_PortableColorPicker}"
                EnableEmptyMode="{Binding EnableEmptyMode, ElementName=_PortableColorPicker}"
                IsEmpty="{Binding IsEmpty, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SecondaryColor="{Binding SecondaryColor, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedColor="{Binding SelectedColor, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                UseRectangularStyle="{Binding UseRectangularStyle, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                UsingAlphaChannel="{Binding UsingAlphaChannel, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <GroupBox Grid.Row="1">
                <GroupBox.Header>
                    <TextBlock FontWeight="ExtraBold" Text="AdvancedColorPicker Features" />
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="AdvancedPickerType:" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        ItemsSource="{Binding Source={StaticResource AdvancedPickerType}}"
                        SelectedItem="{Binding AdvancedPickerType, ElementName=_PortableColorPicker, Mode=TwoWay}" />


                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="SecondaryColor:" />
                    <controls:PortableColorPicker
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="150"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseColorMode="Advanced"
                        IsEnabled="False"
                        PortableBackgroundMode="SelectedColor"
                        PortableBorderModeThickness="1"
                        PortableFontMargin="6,0"
                        PortableFontMode="InverseColors"
                        PortableFontText="SecondaryColor"
                        PortableShowDropdownButton="False"
                        SelectedColor="{Binding SecondaryColor, ElementName=_PortableColorPicker, Mode=TwoWay}"
                        StandardShowRecentColors="False" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="AdvancedInnerBorderWidth:" />

                    <numupdown:DoubleUpDown
                        Grid.Row="3"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        numupdown:DisplayLength="4"
                        numupdown:LargeStepSize="1"
                        numupdown:StepSize="0.1"
                        IsReadOnly="False"
                        MaxValue="5"
                        MinValue="0.1"
                        Tag="InnerBorderWidth"
                        Value="{Binding AdvancedInnerBorderWidth, ElementName=_PortableColorPicker, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="AdvancedInnerBorderBrush:" />

                    <controls:PortableColorPicker
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="120"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        BaseColorMode="Advanced"
                        PortableBackgroundMode="InverseColors"
                        PortableBorderMode="SelectedColor"
                        PortableBorderModeThickness="4"
                        PortableFontMode="SelectedColor"
                        PortableFontText="BorderBrush"
                        SelectedColor="{Binding AdvancedInnerBorderBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}" />
                </Grid>
            </GroupBox>
        </Grid>
        <!--#endregion AdvancedColorPicker Column 1-->

        <!--#region ColorPicker Column 2-->
        <Grid Grid.Column="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:ColorPicker
                AdvancedInnerBorderBrush="{Binding AdvancedInnerBorderBrush, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                AdvancedInnerBorderWidth="{Binding AdvancedInnerBorderWidth, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                AdvancedPickerType="{Binding AdvancedPickerType, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                BaseAdvancedButtonText="{Binding BaseAdvancedButtonText, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                BaseAllowChangeModes="{Binding BaseAllowChangeModes, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                BaseColorMode="{Binding BaseColorMode, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                BasePickerHeight="{Binding BasePickerHeight, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                BasePickerWidth="{Binding BasePickerWidth, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                BaseStandardButtonText="{Binding BaseStandardButtonText, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                EmptyButtonText="{Binding EmptyButtonText, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                EnableEmptyMode="{Binding EnableEmptyMode, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEmpty="{Binding IsEmpty, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SecondaryColor="{Binding SecondaryColor, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedColor="{Binding SelectedColor, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardAvailableColorArray="{Binding StandardAvailableColorArray, ElementName=_PortableColorPicker}"
                StandardAvailableColorRows="{Binding StandardAvailableColorRows, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardAvailableColorsHeader="{Binding StandardAvailableColorsHeader, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardColumnCount="{Binding StandardColumnCount, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemBorderBrush="{Binding StandardItemBorderBrush, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemBorderThickness="{Binding StandardItemBorderThickness, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemCornerRadius="{Binding StandardItemCornerRadius, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemInnerHighlightBrush="{Binding StandardItemInnerHighlightBrush, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemMargin="{Binding StandardItemMargin, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemOuterHighlightBrush="{Binding StandardItemOuterHighlightBrush, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardItemSquareSize="{Binding StandardItemSquareSize, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardRecentColorRows="{Binding StandardRecentColorRows, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardRecentColorsHeader="{Binding StandardRecentColorsHeader, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardShowAvailableColors="{Binding StandardShowAvailableColors, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                StandardShowRecentColors="{Binding StandardShowRecentColors, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                UseRectangularStyle="{Binding UseRectangularStyle, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                UsingAlphaChannel="{Binding UsingAlphaChannel, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <GroupBox Grid.Row="1">
                <GroupBox.Header>
                    <TextBlock FontWeight="ExtraBold" Text="ColorPicker Base Features" />
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="UseRectangularStyle:" />
                    <CheckBox
                        Grid.Row="0"
                        Grid.Column="1"
                        IsChecked="{Binding UseRectangularStyle, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="UsingAlphaChannel: " />
                    <CheckBox
                        x:Name="_usingAlphaChannel"
                        Grid.Row="1"
                        Grid.Column="1"
                        IsChecked="{Binding UsingAlphaChannel, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="BaseColorMode:" />
                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        ItemsSource="{Binding Source={StaticResource ColorModeOptions}}"
                        SelectedItem="{Binding BaseColorMode, ElementName=_PortableColorPicker, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="BaseAllowChangeModes:" />
                    <CheckBox
                        Grid.Row="3"
                        Grid.Column="1"
                        IsChecked="{Binding BaseAllowChangeModes, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="EnableEmptyMode:" />
                    <CheckBox
                        Grid.Row="4"
                        Grid.Column="1"
                        IsChecked="{Binding EnableEmptyMode, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="BaseStandardButtonText:" />

                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        IsEnabled="{Binding BaseAllowChangeModes, ElementName=_PortableColorPicker}"
                        Text="{Binding BaseStandardButtonText, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        VerticalAlignment="Center"
