                        Grid.Row="1"
                        Grid.Column="1"
                        IsChecked="{Binding IsEmpty, ElementName=_PortableColorPicker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="EmptyBackgroundBrush:" />
                    <controls:PortableColorPicker
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="210"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        BaseColorMode="Advanced"
                        SelectedColor="{Binding EmptyBackgroundBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}"
                        StandardShowRecentColors="True" />
                </Grid>
            </GroupBox>
            <!--#endregion Empty Mode Base (Column 1, Row 1)-->

            <!--#region Empty Mode Border (Column 1, Row 2)-->
            <GroupBox
                Grid.Row="2"
                Grid.Column="1"
                IsEnabled="{Binding EnableEmptyMode, ElementName=_PortableColorPicker}">
                <GroupBox.Header>
                    <TextBlock FontWeight="ExtraBold" Text="Empty Border Options" />
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="EmptyBorderMode:" />
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        ItemsSource="{Binding Source={StaticResource EmptyElementModes}}"
                        SelectedItem="{Binding EmptyBorderMode, ElementName=_PortableColorPicker, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="EmptyBorderThickness:" />
                    <TextBox
                        x:Name="_emptyBorderThickness"
                        Grid.Row="1"
                        Grid.Column="1"
                        CommandManager.PreviewExecuted="TextBox_PreviewExecuted"
                        PreviewTextInput="Thickness_PreviewInput"
                        TextChanged="Thickness_TextChanged">
                        <TextBox.Text>
                            <MultiBinding
                                Converter="{StaticResource TextToThicknessConverter}"
                                Mode="TwoWay"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding ElementName="_emptyBorderThickness" Path="Text" />
                                <Binding ElementName="_PortableColorPicker" Path="EmptyBorderThickness" />
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="EmptyBorderBrush:" />
                    <controls:PortableColorPicker
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        PortableBackgroundMode="Off"
                        PortableBorderMode="SelectedColor"
                        SelectedColor="{Binding EmptyBorderBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}"
                        StandardShowRecentColors="True" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="EmptyBorderHighlightBrush:" />
                    <controls:PortableColorPicker
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        PortableBackgroundMode="Off"
                        PortableBorderMode="SelectedColor"
                        SelectedColor="{Binding EmptyBorderHighlightBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}"
                        StandardShowRecentColors="True" />
                </Grid>
            </GroupBox>
            <!--#endregion Empty Mode Border (Column 1, Row 2)-->

            <!--#region Empty Mode Shape (Column 1, Row 3)-->
            <GroupBox
                Grid.Row="3"
                Grid.Column="1"
                IsEnabled="{Binding EnableEmptyMode, ElementName=_PortableColorPicker}">
                <GroupBox.Header>
                    <TextBlock FontWeight="ExtraBold" Text="Empty Shape Options" />
                </GroupBox.Header>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="EmptyShapeMode:" />
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        ItemsSource="{Binding Source={StaticResource EmptyElementModes}}"
                        SelectedItem="{Binding EmptyShapeMode, ElementName=_PortableColorPicker, Mode=TwoWay}" />

                    <Grid
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="EmptyShapeGeometry:" />
                        <ComboBox
                            Grid.Column="1"
                            Width="70"
                            HorizontalAlignment="Right"
                            ItemTemplateSelector="{DynamicResource itemTemplateSelector}"
                            ItemsSource="{Binding ShapeGeometryComboItems, ElementName=LocalColorSelectionView}"
                            SelectedIndex="0"
                            SelectedValue="{Binding EmptyShapeGeometry, ElementName=_PortableColorPicker}"
                            SelectedValuePath="Value">
                            <ComboBox.Resources>
                                <DataTemplate x:Key="selectedTemplate">
                                    <Path
                                        Grid.Column="1"
                                        Width="25"
                                        Height="25"
                                        Data="{Binding Geometry}"
                                        Stretch="Uniform"
                                        StrokeThickness="2" />
                                </DataTemplate>
                                <DataTemplate x:Key="dropDownTemplate">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Width="170"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            Text="{Binding Name}" />
                                        <Path
                                            Grid.Column="1"
                                            Width="18"
                                            Height="18"
                                            Data="{Binding Geometry}"
                                            Stretch="Fill"
                                            StrokeThickness="2" />
                                    </Grid>
                                </DataTemplate>
                                <local:ComboBoxItemTemplateSelector
                                    x:Key="itemTemplateSelector"
                                    DropDownTemplate="{StaticResource dropDownTemplate}"
                                    SelectedTemplate="{StaticResource selectedTemplate}" />
                            </ComboBox.Resources>
                        </ComboBox>
                    </Grid>

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="EmptyShapeLineWidth:" />
                    <numupdown:DoubleUpDown
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        numupdown:DisplayLength="4"
                        numupdown:LargeStepSize="1"
                        numupdown:StepSize="0.25"
                        IsReadOnly="False"
                        MaxValue="4"
                        MinValue="0"
                        Value="{Binding EmptyShapeLineWidth, ElementName=_PortableColorPicker, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="EmptyShapeHorizontalAlignment:" />
                    <ComboBox
                        Grid.Row="3"
                        Grid.Column="1"
                        SelectedItem="{Binding EmptyShapeHorizontalAlignment, ElementName=_PortableColorPicker}">
                        <x:Static Member="HorizontalAlignment.Left" />
                        <x:Static Member="HorizontalAlignment.Center" />
                        <x:Static Member="HorizontalAlignment.Right" />
                        <x:Static Member="HorizontalAlignment.Stretch" />
                    </ComboBox>

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Text="EmptyShapeVerticalAlignment:" />
                    <ComboBox
                        Grid.Row="4"
                        Grid.Column="1"
                        SelectedItem="{Binding EmptyShapeVerticalAlignment, ElementName=_PortableColorPicker}">
                        <x:Static Member="VerticalAlignment.Top" />
                        <x:Static Member="VerticalAlignment.Center" />
                        <x:Static Member="VerticalAlignment.Bottom" />
                        <x:Static Member="VerticalAlignment.Stretch" />
                    </ComboBox>

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Text="EmptyShapeStretch:" />
                    <ComboBox
                        Grid.Row="5"
                        Grid.Column="1"
                        SelectedItem="{Binding EmptyShapeStretch, ElementName=_PortableColorPicker}">
                        <x:Static Member="Stretch.Fill" />
                        <x:Static Member="Stretch.Uniform" />
                        <x:Static Member="Stretch.UniformToFill" />
                    </ComboBox>

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Text="EmptyShapeBrush:" />
                    <controls:PortableColorPicker
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        SelectedColor="{Binding EmptyShapeColorBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}"
                        StandardShowRecentColors="True" />

                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Text="EmptyShapeMargin:" />
                    <TextBox
                        x:Name="_emptyShapeMargin"
                        Grid.Row="7"
                        Grid.Column="1"
                        Width="100"
                        HorizontalAlignment="Right"
                        CommandManager.PreviewExecuted="TextBox_PreviewExecuted"
                        PreviewTextInput="Thickness_PreviewInput"
                        TextChanged="Thickness_TextChanged">
                        <TextBox.Text>
                            <MultiBinding
                                Converter="{StaticResource TextToThicknessConverter}"
                                Mode="TwoWay"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding ElementName="_emptyShapeMargin" Path="Text" />
                                <Binding ElementName="_PortableColorPicker" Path="EmptyShapeMargin" />
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>
            </GroupBox>
            <!--#endregion Empty Mode Shape (Column 1, Row 3)-->

            <!--#region Empty Mode Font (Column 1, Row 4)-->
            <GroupBox
                Grid.Row="4"
                Grid.Column="1"
                IsEnabled="{Binding EnableEmptyMode, ElementName=_PortableColorPicker}">
                <GroupBox.Header>
                    <TextBlock FontWeight="ExtraBold" Text="Empty Text Options" />
                </GroupBox.Header>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="EmptyFontMode:" />
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        ItemsSource="{Binding Source={StaticResource EmptyElementModes}}"
                        SelectedItem="{Binding EmptyFontMode, ElementName=_PortableColorPicker, Mode=TwoWay}" />

                    <TextBlock
                        Name="_textColorLabel"
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="EmptyFontBrush:" />
                    <controls:PortableColorPicker
                        Name="_emptyFontBrushPicker"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BaseAllowChangeModes="False"
                        EnableEmptyMode="True"
                        IsEmpty="True"
                        SelectedColor="{Binding EmptyFontBrush, ElementName=_PortableColorPicker, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}"
                        StandardShowRecentColors="True" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontBrushReset" />


                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="EmptyFontText:" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="{Binding EmptyFontText, ElementName=_PortableColorPicker, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Visibility="Hidden" />
                    <CheckBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Visibility="Hidden" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Text="EmptyFontFamily:" />
                    <ComboBox
                        Grid.Row="4"
                        Grid.Column="1"
                        ItemsSource="{Binding FontFamiliesComboItems, ElementName=LocalColorSelectionView}"
                        SelectedItem="{Binding EmptyFontFamily, ElementName=_PortableColorPicker}" />
                    <Button
                        Grid.Row="4"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontFamilyReset" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Text="EmptyFontHorizontalAlignment:" />
                    <ComboBox
                        Grid.Row="5"
                        Grid.Column="1"
                        SelectedItem="{Binding EmptyFontHorizontalAlignment, ElementName=_PortableColorPicker}">
                        <x:Static Member="HorizontalAlignment.Left" />
                        <x:Static Member="HorizontalAlignment.Center" />
                        <x:Static Member="HorizontalAlignment.Right" />
                        <x:Static Member="HorizontalAlignment.Stretch" />
                    </ComboBox>
                    <Button
                        Grid.Row="5"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontHorizontalAlignmentReset" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Text="EmptyFontVerticalAlignment:" />
                    <ComboBox
                        Grid.Row="6"
                        Grid.Column="1"
                        SelectedItem="{Binding EmptyFontVerticalAlignment, ElementName=_PortableColorPicker}">
                        <x:Static Member="VerticalAlignment.Top" />
                        <x:Static Member="VerticalAlignment.Center" />
                        <x:Static Member="VerticalAlignment.Bottom" />
                        <x:Static Member="VerticalAlignment.Stretch" />
                    </ComboBox>
                    <Button
                        Grid.Row="6"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontVerticalAlignmentReset" />

                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Text="EmptyFontStyle:" />
                    <ComboBox
                        Grid.Row="7"
                        Grid.Column="1"
                        SelectedItem="{Binding EmptyFontStyle, ElementName=_PortableColorPicker}">
                        <x:Static Member="FontStyles.Normal" />
                        <x:Static Member="FontStyles.Italic" />
                        <x:Static Member="FontStyles.Oblique" />
                    </ComboBox>
                    <Button
                        Grid.Row="7"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontStyleReset" />

                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="0"
                        Text="EmptyFontWeight:" />
                    <ComboBox
                        Grid.Row="8"
                        Grid.Column="1"
                        SelectedItem="{Binding EmptyFontWeight, ElementName=_PortableColorPicker}">
                        <x:Static Member="FontWeights.Black" />
                        <x:Static Member="FontWeights.Bold" />
                        <x:Static Member="FontWeights.DemiBold" />
                        <x:Static Member="FontWeights.ExtraBlack" />
                        <x:Static Member="FontWeights.ExtraBold" />
                        <x:Static Member="FontWeights.ExtraLight" />
                        <x:Static Member="FontWeights.Heavy" />
                        <x:Static Member="FontWeights.Light" />
                        <x:Static Member="FontWeights.Medium" />
                        <x:Static Member="FontWeights.Normal" />
                        <x:Static Member="FontWeights.Regular" />
                        <x:Static Member="FontWeights.SemiBold" />
                        <x:Static Member="FontWeights.Thin" />
                        <x:Static Member="FontWeights.UltraBlack" />
                        <x:Static Member="FontWeights.UltraBold" />
                        <x:Static Member="FontWeights.UltraLight" />
                    </ComboBox>
                    <Button
                        Grid.Row="8"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontWeightReset" />

                    <TextBlock
                        Grid.Row="9"
                        Grid.Column="0"
                        Text="EmptyFontTextDecorations:" />
                    <ComboBox
                        Grid.Row="9"
                        Grid.Column="1"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding TextDecorationComboItems, ElementName=LocalColorSelectionView}"
                        SelectedValue="{Binding EmptyFontTextDecorations, ElementName=_PortableColorPicker}"
                        SelectedValuePath="TextDecorations" />
                    <Button
                        Grid.Row="9"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyTextDecorationsReset" />

                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="0"
                        Text="EmptyFontViewboxStretch:" />
                    <ComboBox
                        Grid.Row="10"
                        Grid.Column="1"
                        SelectedValue="{Binding EmptyFontViewboxStretch, ElementName=_PortableColorPicker}">
                        <x:Static Member="Stretch.None" />
                        <x:Static Member="Stretch.Fill" />
                        <x:Static Member="Stretch.Uniform" />
                        <x:Static Member="Stretch.UniformToFill" />
                    </ComboBox>
                    <Button
                        Grid.Row="10"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontViewboxStretchReset" />

                    <TextBlock
                        Grid.Row="11"
                        Grid.Column="0"
                        Text="EmptyFontSize:" />
                    <numupdown:DoubleUpDown
                        x:Name="_EmptyFontSize_Changer"
                        Grid.Row="11"
                        Grid.Column="1"
                        numupdown:DisplayLength="4"
                        numupdown:LargeStepSize="1"
                        numupdown:StepSize="0.1"
                        IsReadOnly="False"
                        MaxValue="20"
                        MinValue="0"
                        Tag="Empty"
                        Value="{Binding EmptyFontSize, Mode=TwoWay, ElementName=LocalColorSelectionView}" />
                    <Button
                        Grid.Row="11"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontSizeReset" />

                    <TextBlock
                        Grid.Row="12"
                        Grid.Column="0"
                        Text="EmptyFontMargin:" />
                    <TextBox
                        x:Name="_emptyFontMargin"
                        Grid.Row="12"
                        Grid.Column="1"
                        CommandManager.PreviewExecuted="TextBox_PreviewExecuted"
                        PreviewTextInput="Thickness_PreviewInput"
                        TextChanged="Thickness_TextChanged">
                        <TextBox.Text>
                            <MultiBinding
                                Converter="{StaticResource TextToThicknessConverter}"
                                Mode="TwoWay"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding ElementName="_emptyFontMargin" Path="Text" />
                                <Binding ElementName="_PortableColorPicker" Path="EmptyFontMargin" />
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>
                    <Button
                        Grid.Row="12"
                        Grid.Column="2"
                        Click="Null_Click"
                        Content="Reset"
                        Tag="EmptyFontMarginReset" />
                </Grid>
            </GroupBox>
            <!--#endregion Empty Mode Font (Column 1, Row 4)-->
            <!--#endregion Empty Mode Options-->
        </Grid>
        <!--#endregion PortableColorPicker Column 3-->
    </Grid>
</UserControl>
